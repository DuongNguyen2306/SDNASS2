<h2>Add Multiple Questions</h2>

<form action="/quizzes/<%= quizId %>/questions" method="post" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Questions JSON</label>
    <textarea name="jsonText" class="form-control" rows="12" placeholder='[
  {
    "text": "What is the capital of France?",
    "options": ["Paris","Rome","Berlin","Madrid"],
    "keywords": ["capital","France"],
    "correctAnswerIndex": 0
  }
]'><%= jsonText %></textarea>
    <div class="form-text">Paste a JSON array of question objects.</div>
  </div>
  <div class="mt-2 d-flex gap-2">
    <button type="submit" class="btn btn-primary">Add All</button>
    <a href="/quizzes/<%= quizId %>" class="btn btn-secondary">Cancel</a>
  </div>
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger mt-3"><%= error %></div>
  <% } %>
</form>

