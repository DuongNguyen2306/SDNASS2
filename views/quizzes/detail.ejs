<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><%= quiz.title %></h2>
  <div>
    <a class="btn btn-outline-primary" href="/quizzes/<%= quiz._id %>/edit">Edit</a>
    <a class="btn btn-secondary" href="/quizzes">Back</a>
  </div>
</div>

<div class="card mb-3">
  <div class="card-body">
    <p class="mb-0"><%= quiz.description %></p>
  </div>
</div>

<h5>Questions (<%= (quiz.questions || []).length %>)</h5>
<ol>
  <% (quiz.questions || []).forEach(q => { %>
    <li><%= q.text || q %></li>
  <% }) %>
</ol>

<div class="mt-3 d-flex gap-2">
  <a class="btn btn-sm btn-outline-secondary" href="/quizzes/<%= quiz._id %>/populate">Show only 'capital'</a>
  <a class="btn btn-sm btn-success" href="/quizzes/<%= quiz._id %>/question/new">Add Question</a>
  <a class="btn btn-sm btn-success" href="/quizzes/<%= quiz._id %>/questions/new">Add Multiple Questions</a>
</div>

