<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Questions</h1>
  <a href="/questions/new" class="btn btn-primary">Create New Question</a>
</div>

{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
{{/if}}

{{#if questions.length}}
  <div class="row">
    {{#each questions}}
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">{{text}}</h5>
            <p class="card-text">
              <small class="text-muted">
                {{options.length}} options
              </small>
            </p>
            {{#if keywords.length}}
              <div class="mb-2">
                {{#each keywords}}
                  <span class="badge bg-secondary me-1">{{this}}</span>
                {{/each}}
              </div>
            {{/if}}
          </div>
          <div class="card-footer">
            <div class="btn-group w-100" role="group">
              <a href="/questions/{{_id}}" class="btn btn-outline-primary btn-sm">View</a>
              <a href="/questions/{{_id}}/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
              <form method="POST" action="/questions/{{_id}}?_method=DELETE" class="d-inline">
                <button type="submit" class="btn btn-outline-danger btn-sm" 
                        onclick="return confirm('Are you sure you want to delete this question?')">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="text-center py-5">
    <h3 class="text-muted">No questions found</h3>
    <p class="text-muted">Create your first question to get started.</p>
    <a href="/questions/new" class="btn btn-primary">Create New Question</a>
  </div>
{{/if}}
