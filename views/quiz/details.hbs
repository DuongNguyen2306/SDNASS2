<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>{{quiz.title}}</h2>
  <div>
    <a href="/quiz/{{quiz._id}}/edit" class="btn btn-outline-primary">Edit Quiz</a>
    <a href="/quiz" class="btn btn-secondary">Back to List</a>
  </div>
</div>

<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Description</h5>
    <p class="card-text">{{quiz.description}}</p>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Questions ({{quiz.questions.length}})</h5>
  </div>
  <div class="card-body">
    {{#if quiz.questions.length}}
      <ol>
        {{#each quiz.questions}}
          <li class="mb-3">
            <strong>{{text}}</strong>
            <ul class="list-unstyled mt-2">
              {{#each options}}
                <li class="ms-3">
                  {{#if (eq @index ../correctAnswerIndex)}}
                    <span class="badge bg-success">{{this}} (Correct)</span>
                  {{else}}
                    {{this}}
                  {{/if}}
                </li>
              {{/each}}
            </ul>
            {{#if keywords.length}}
              <div class="mt-2">
                <strong>Keywords:</strong>
                {{#each keywords}}
                  <span class="badge bg-secondary me-1">{{this}}</span>
                {{/each}}
              </div>
            {{/if}}
          </li>
        {{/each}}
      </ol>
    {{else}}
      <p class="text-muted">No questions in this quiz.</p>
    {{/if}}
  </div>
</div>
